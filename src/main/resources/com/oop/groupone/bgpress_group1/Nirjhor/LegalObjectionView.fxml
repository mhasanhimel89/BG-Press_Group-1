<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="your.package.LegalObjectionController"
      spacing="12" alignment="TOP_LEFT" padding="20">

    <Label text="Legal Objection" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Objection ID:" minWidth="120"/>
        <TextField fx:id="txtObjectionId" promptText="Enter objection ID"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Issue Details:" minWidth="120"/>
        <TextArea fx:id="txtIssueDetails" prefRowCount="4" prefColumnCount="25"/>
    </HBox>

    <CheckBox fx:id="chkIsSubmitted" text="Submitted"/>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="Create Objection" onAction="#createObjection"/>
        <Button text="Submit Objection" onAction="#submitObjection"/>
    </HBox>

    <Label fx:id="lblStatus" style="-fx-text-fill:green; -fx-font-weight:bold;"/>
</VBox>
