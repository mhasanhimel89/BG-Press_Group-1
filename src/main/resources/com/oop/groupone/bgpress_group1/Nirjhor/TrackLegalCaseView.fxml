<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="your.package.TrackLegalCaseController"
      spacing="12" alignment="TOP_LEFT" padding="20">

    <Label text="Track Legal Case" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Case ID:" minWidth="120"/>
        <TextField fx:id="txtCaseId" promptText="Enter case ID"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Last Hearing Date:" minWidth="120"/>
        <TextField fx:id="txtLastHearingDate" promptText="YYYY-MM-DD"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Update Note:" minWidth="120"/>
        <TextArea fx:id="txtUpdateNote" prefRowCount="4" prefColumnCount="25"/>
    </HBox>

    <CheckBox fx:id="chkHasNewUpdate" text="Has New Update"/>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="View Case Timeline" onAction="#viewCaseTimeline"/>
        <Button text="Add Internal Note" onAction="#addInternalNote"/>
    </HBox>

    <TextArea fx:id="txtCaseDetails" prefRowCount="6" prefColumnCount="30" promptText="Case details..."/>
</VBox>
