<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.requisitions.RequisitionsController">

    <center>
        <HBox spacing="20" padding="10">
            <!-- List of Requisitions -->
            <ListView fx:id="requisitionListView" prefWidth="200" />

            <!-- Details Section -->
            <VBox spacing="10">
                <Label text="Requisition Details:" style="-fx-font-weight: bold;"/>
                <Label fx:id="requisitionDetailsLabel" wrapText="true" />
            </VBox>
        </HBox>
    </center>

</BorderPane>
