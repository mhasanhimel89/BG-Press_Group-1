<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="your.package.ReviewAgreementsController"
      spacing="12" alignment="TOP_LEFT" padding="20">

    <Label text="Review Agreements" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Agreement ID:" minWidth="120"/>
        <TextField fx:id="txtAgreementId" promptText="Enter agreement ID"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Supplier Name:" minWidth="120"/>
        <TextField fx:id="txtSupplierName" promptText="Enter supplier name"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Review Comment:" minWidth="120"/>
        <TextArea fx:id="txtReviewComment" prefRowCount="4" prefColumnCount="25"/>
    </HBox>

    <CheckBox fx:id="chkHasReviewed" text="Has Reviewed"/>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="Open Agreement" onAction="#openAgreement"/>
        <Button text="Add Review Notes" onAction="#addReviewNotes"/>
    </HBox>

    <Label fx:id="lblStatus" style="-fx-text-fill:green; -fx-font-weight:bold;"/>
</VBox>
