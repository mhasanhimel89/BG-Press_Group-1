<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="your.package.ViewContractsController"
      spacing="12" alignment="TOP_LEFT" padding="20">

    <Label text="View Contracts" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Contract ID:" minWidth="100"/>
        <TextField fx:id="txtContractId" promptText="Enter contract ID"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Contract Name:" minWidth="100"/>
        <TextField fx:id="txtContractName" promptText="Contract name"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Document Type:" minWidth="100"/>
        <TextField fx:id="txtDocumentType" promptText="PDF / DOCX / TXT"/>
    </HBox>

    <CheckBox fx:id="chkIsViewed" text="Viewed"/>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="View Contract List" onAction="#viewContractList"/>
        <Button text="Open Contract" onAction="#openContract"/>
    </HBox>

    <TextArea fx:id="txtContractDetails" prefRowCount="6" prefColumnCount="30" promptText="Contract details..."/>
</VBox>
