<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="your.package.TrackRequisitionStatusController"
      spacing="12" alignment="TOP_LEFT" padding="20">

    <Label text="Track Requisition Status" style="-fx-font-size:18; -fx-font-weight:bold;"/>


    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Requisition ID:" minWidth="160"/>
        <TextField fx:id="txtRequisitionId" promptText="Enter requisitionId"/>
    </HBox>


    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Current Status:" minWidth="160"/>
        <TextField fx:id="txtCurrentStatus" promptText="e.g., Pending / Approved / In Transit"/>
    </HBox>


    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Expected Delivery Days:" minWidth="160"/>
        <Spinner fx:id="spnExpectedDays" editable="true" prefWidth="120"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Delivery Progress (%):" minWidth="160"/>
        <TextField fx:id="txtProgressPercent" promptText="0.0 - 100.0" prefWidth="120"/>
        <ProgressBar fx:id="progressBar" prefWidth="240" progress="0.0"/>
    </HBox>


    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="Get Status" onAction="#getStatus"/>
        <Button text="Display Timeline" onAction="#displayTimeline"/>
        <Button text="Reset" onAction="#resetForm"/>
    </HBox>


    <TitledPane text="Timeline / Details" expanded="true">
        <VBox spacing="8" padding="10">
            <ListView fx:id="lstTimeline" prefHeight="180"/>
            <TextArea fx:id="txtDetails" promptText="Additional details..." prefRowCount="4"/>
        </VBox>
    </TitledPane>

</VBox>
