<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="your.package.SupplierCommunicationController"
      spacing="12" alignment="TOP_LEFT" padding="20">

    <Label text="Supplier Communication" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Recipient Name:" minWidth="120"/>
        <TextField fx:id="txtRecipientName" promptText="Enter recipient"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Message Content:" minWidth="120"/>
        <TextArea fx:id="txtMessageContent" prefRowCount="4" prefColumnCount="25"/>
    </HBox>

    <CheckBox fx:id="chkMessageSent" text="Message Sent"/>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="Compose Message" onAction="#composeMessage"/>
        <Button text="Send" onAction="#send"/>
    </HBox>

    <Label fx:id="lblStatus" style="-fx-text-fill:green; -fx-font-weight:bold;"/>

</VBox>
