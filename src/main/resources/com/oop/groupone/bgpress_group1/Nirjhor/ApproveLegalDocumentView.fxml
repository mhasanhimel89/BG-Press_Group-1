<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="your.package.ApproveLegalDocumentController"
      spacing="12" alignment="TOP_LEFT" padding="20">

    <Label text="Approve Legal Document" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Document ID:" minWidth="120"/>
        <TextField fx:id="txtDocumentId" promptText="Enter document ID"/>
    </HBox>

    <CheckBox fx:id="chkIsApproved" text="Approved"/>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="Open Document" onAction="#openDocument"/>
        <Button text="Approve" onAction="#approve"/>
    </HBox>

    <Label fx:id="lblStatus" style="-fx-text-fill:green; -fx-font-weight:bold;"/>
</VBox>
