<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="your.package.FeedbackSubmissionController"
      spacing="12" alignment="TOP_LEFT" padding="20">

    <Label text="Feedback Submission" style="-fx-font-size:18; -fx-font-weight:bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Feedback:" minWidth="120"/>
        <TextArea fx:id="txtFeedbackText" prefRowCount="4" prefColumnCount="25"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Satisfaction Rating:" minWidth="120"/>
        <Slider fx:id="sliderRating" min="0" max="5" blockIncrement="0.5" showTickLabels="true" showTickMarks="true" snapToTicks="true"/>
        <Label fx:id="lblRatingValue" text="0.0"/>
    </HBox>

    <CheckBox fx:id="chkIsSubmitted" text="Submitted"/>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="Submit Feedback" onAction="#submitFeedback"/>
        <Button text="Show Thanks" onAction="#showThanks"/>
    </HBox>

    <Label fx:id="lblThanks" style="-fx-text-fill:green; -fx-font-weight:bold;"/>

</VBox>
